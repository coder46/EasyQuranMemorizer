<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="20sp"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
    android:paddingTop="20sp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <TextView
        android:id="@+id/home_page_left_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5sp"
        android:gravity="left"
        android:text="Al-Fatiha"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/home_page_right_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Al-bakra"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/home_page_download_button"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginRight="2sp"
        android:background="@drawable/ic_action_download"
        android:clickable="true" />

    <ImageView
        android:id="@+id/home_page_delete_button"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_action_discard_light"
        android:clickable="true" />

</LinearLayout>